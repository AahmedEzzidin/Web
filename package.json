{
  "name": "cicd-security-demo",
  "version": "1.0.0",
  "description": "Demo project showcasing CI/CD pipeline security with secrets scanning and dependency audit",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "test": "echo \"Running tests...\" && exit 0",
    "scan:secrets": "trufflehog filesystem . --json --only-verified",
    "audit:dependencies": "npm audit --production",
    "security:check": "npm run scan:secrets && npm run audit:dependencies"
  },
  "keywords": [
    "security",
    "cicd",
    "secrets-scanning",
    "dependency-audit",
    "devsecops"
  ],
  "author": "Demo Author",
  "license": "MIT",
  "dependencies": {
    "express": "4.18.2",
    "dotenv": "16.4.5",
    "lodash": "4.17.21"
  },
  "devDependencies": {
    "nodemon": "^2.0.15"
  }
}
